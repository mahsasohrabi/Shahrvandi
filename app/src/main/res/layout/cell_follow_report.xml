<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
    <com.github.florent37.expansionpanel.ExpansionHeader
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:expansion_headerIndicator="@id/headerIndicator"
        app:expansion_layout="@id/expansionLayout"
        app:expansion_toggleOnClick="true">

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_marginHorizontal="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            app:cardCornerRadius="4dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp">
                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="247976"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:text="کد پیام "
                        android:textColor="@color/textColor" />

                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp">
                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="حمل و نقل ترافیک"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:text="گروه موضوع"
                        android:textColor="@color/textColor" />
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/headerIndicator"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_width="0dp"
                        android:layout_weight=".8"
                        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />

                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="18/4/98"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView

                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:text="تاریخ ارسال"
                        android:textColor="@color/textColor" />

                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
<!--        </androidx.cardview.widget.CardView>-->

    </com.github.florent37.expansionpanel.ExpansionHeader>

    <com.github.florent37.expansionpanel.ExpansionLayout
        android:id="@+id/expansionLayout"
        app:expansion_expanded="false"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_marginTop="-10dp"-->
<!--            android:layout_marginHorizontal="10dp"-->
<!--            app:cardCornerRadius="4dp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
            <LinearLayout
                android:id="@+id/container"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp">
                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="حمل و نقل ترافیک"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:text="آخرین وضعیت"
                        android:textColor="@color/textColor" />
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp">
                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="لورم ایپسوم متن ساختگی باتولید سادگی"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:text="نشانی"
                        android:textColor="@color/textColor" />
                </LinearLayout>
                <LinearLayout
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingRight="16dp">
                    <TextView
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:text="لورم ایپسوم متن ساختگی باتولید سادگی نامفهوم از صنعت چاپ"
                        android:textColor="@color/colorPrimaryText" />

                    <TextView
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:text="متن پیام"
                        android:textColor="@color/textColor" />
                </LinearLayout>

                <Button
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="60dp"
                    android:background="@drawable/bg_report_btn"
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بازخورد"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium"
                    />
            </LinearLayout>
<!--</androidx.cardview.widget.CardView>-->
    </com.github.florent37.expansionpanel.ExpansionLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
