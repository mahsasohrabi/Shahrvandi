<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_card"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">


        <LinearLayout
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="247986"
                android:textColor="@color/colorPrimaryText"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="کد پیام"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_marginTop="12dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubjectGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حمل و نقل ترافیک"
                android:textColor="@color/colorPrimaryText"
                android:textSize="17sp" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="گروه موضوع"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupSubject"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:36      18/4/98"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="تاریخ ارسال"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnExpand"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/date"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:tint="#757575"
            app:srcCompat="@mipmap/ic_keyboard_arrow_down_black_18dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomPart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrgUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="حوزه کنترل و نظارت 8"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="واحد سازمانی"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFunctionalArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="خدمات شهری"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="حیطه عملکرد"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorPrimaryText"
                android:text="لورم ایپسوم متن ساختگی باتولید سادگی"
                android:id="@+id/tv_address"
                android:layout_width="196dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView14"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="نشانی"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انتخاب نشده است"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView15"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="وضعیت"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:orientation="horizontal">

            <EditText
                android:textColor="@color/colorPrimaryText"
                android:id="@+id/etWorkFlow"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_marginLeft="54dp"
                android:layout_weight="1"
                android:background="@drawable/et_text_input"
                android:ems="10"
                android:gravity="right|top"
                android:hint="اینجا بنویسید"
                android:inputType="textMultiLine"
                android:padding="4dp"
                android:textSize="12sp" />

            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textView16"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="شرح گردش"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bottons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="60dp"
                    android:background="@drawable/bg_report_btn"
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="بازخورد"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnCollapse"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignBottom="@id/bottons"
                android:padding="12dp"
                android:rotation="180"
                android:tint="#757575"
                app:srcCompat="@mipmap/ic_keyboard_arrow_down_black_18dp" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>