<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layoutDirection="ltr"
    android:background="@color/backSignInColor"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_toolbar"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_weight=".3"
                android:src="@drawable/ic_arrow_up"/>
            <TextView
                android:layout_marginRight="8dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight="9.7"
                android:id="@+id/tv_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بازخورد " />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="14dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="16dp">
                <TextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:text="247976"
                    android:textColor="#3E3E3E" />

                <TextView

                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:text="کد پیام "
                    android:textColor="#AAA" />

            </LinearLayout>
            <LinearLayout
                android:padding="14dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="16dp">
                <TextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:text="حمل و نقل ترافیک"
                    android:textColor="#3E3E3E" />

                <TextView
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:text="گروه موضوع"
                    android:textColor="#AAA" />
            </LinearLayout>
            <LinearLayout
                android:padding="14dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="16dp">
                <TextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:text="18/4/98"
                    android:textColor="#3E3E3E" />

                <TextView
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:text="تاریخ ارسال"
                    android:textColor="#AAA" />

            </LinearLayout>
            <LinearLayout
                android:padding="14dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="16dp">
                <TextView
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:text="لورم ایپسوم متن"
                    android:textColor="#3E3E3E" />
                <TextView
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:text="آخرین وضعیت"
                    android:textColor="#AAA" />
            </LinearLayout>
            <View
                android:layout_margin="3dp"
                android:background="@color/colorDarkGray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <TextView
                android:layout_margin="14dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="لورم ایپسوم متن ساختگی باتولید سادگی نامفهوم "
                android:textColor="#3E3E3E" />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srb_starSize="37dp"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_starsSeparation="30dp"
                app:srb_stepSize="0.5"
                app:srb_borderColor="#fa9600"
                app:srb_fillColor="#ffc772"
                />
            <TextView
                android:layout_margin="14dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="لورم ایپسوم متن ساختگی باتولید سادگی نامفهوم "
                android:textColor="#3E3E3E" />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srb_starSize="37dp"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_starsSeparation="30dp"
                app:srb_stepSize="0.5"
                app:srb_borderColor="#fa9600"
                app:srb_fillColor="#ffc772"
                />
            <TextView
                android:layout_margin="14dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="لورم ایپسوم متن ساختگی باتولید سادگی نامفهوم "
                android:textColor="#3E3E3E" />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srb_starSize="37dp"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_starsSeparation="30dp"
                app:srb_stepSize="0.5"
                app:srb_borderColor="#fa9600"
                app:srb_fillColor="#ffc772"
                android:layout_marginBottom="20dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_btn_presentation"
        android:id="@+id/btn_sing_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ثبـت"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/medium"/>
</LinearLayout>