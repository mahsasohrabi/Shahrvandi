<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">
    <ImageView
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/image_2" />
    <androidx.appcompat.widget.AppCompatTextView
        android:paddingRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نام کاربری خود را وارد کنید" />

    <androidx.appcompat.widget.AppCompatEditText
        android:padding="12dp"
        android:textAlignment="gravity"
        android:gravity="right|center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_edit_login"
        android:id="@+id/edit_user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="0917697123"
        android:textSize="14dp"
        android:textColor="@color/colorDarkGray"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:paddingRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="right"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="نام کاربری کد ملی شما می باشد" />

    <androidx.appcompat.widget.AppCompatTextView
        android:textStyle="bold"
        android:paddingRight="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="right"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رمـز عبور خود را وارد کنید" />

    <androidx.appcompat.widget.AppCompatEditText
        android:padding="12dp"
        android:textAlignment="gravity"
        android:gravity="right|center"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_edit_login"
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="رمز عبور"
        android:textSize="14dp"
        android:textColor="@color/colorDarkGray"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_forget_pass"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:textSize="13dp"
        android:textColor="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="رمز عبور خود را فراموش کرده اید؟" />

    <ImageView
        android:layout_marginHorizontal="20dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:srcCompat="@drawable/image_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_btn_presentation"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ورود"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/medium"/>
</LinearLayout>